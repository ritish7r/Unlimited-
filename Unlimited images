    <script>
        // Free image API from Unsplash
        const ACCESS_KEY = 'YOUR_UNSPLASH_ACCESS_KEY'; // Replace with your key
        const apiUrl = `https://api.unsplash.com/photos/random?client_id=${ACCESS_KEY}&count=12&query=wallpaper`;
        
        const imageGrid = document.getElementById('imageGrid');
        
        // Fetch images from Unsplash API
        async function getImages() {
            try {
                const response = await fetch(apiUrl);
                const data = await response.json();
                
                data.forEach(photo => {
                    const card = document.createElement('div');
                    card.className = 'image-card';
                    
                    card.innerHTML = `
                        <img src="${photo.urls.regular}" alt="${photo.alt_description || 'Beautiful image'}">
                        <div class="image-info">
                            <h3>${photo.user.name}</h3>
                            <p>${photo.description || 'High quality image'}</p>
                            <a href="${photo.links.download}" target="_blank" class="download-btn">Download Free</a>
                        </div>
                    `;
                    
                    imageGrid.appendChild(card);
                });
            } catch (error) {
                console.error('Error fetching images:', error);
                imageGrid.innerHTML = '<p>Images failed to load. Please try again later.</p>';
            }
        }
        
        // Get images on page load
        document.addEventListener('DOMContentLoaded', getImages);
        
        // Search functionality
        const searchBtn = document.querySelector('.search-btn');
        searchBtn.addEventListener('click', () => {
            const searchTerm = document.querySelector('input').value;
            if(searchTerm) {
                imageGrid.innerHTML = '';
                const newUrl = `https://api.unsplash.com/search/photos?client_id=${ACCESS_KEY}&query=${searchTerm}&per_page=12`;
                fetchImages(newUrl);
            }
        });
        
        // Function to fetch images from custom URL
        async function fetchImages(url) {
            try {
                const response = await fetch(url);
                const data = await response.json();
                const photos = data.results || data;
                
                photos.forEach(photo => {
                    const card = document.createElement('div');
                    card.className = 'image-card';
                    
                    card.innerHTML = `
                        <img src="${photo.urls.regular}" alt="${photo.alt_description || 'Beautiful image'}">
                        <div class="image-info">
                            <h3>${photo.user.name}</h3>
                            <p>${photo.description || 'High quality image'}</p>
                            <a href="${photo.links.download}" target="_blank" class="download-btn">Download Free</a>
                        </div>
                    `;
                    
                    imageGrid.appendChild(card);
                });
            } catch (error) {
                console.error('Error fetching images:', error);
                imageGrid.innerHTML = '<p>Images failed to load. Please try again later.</p>';
            }
        }
    </script>
